<script>
function capitalize(str) {
    return str.charAt(0).toUpperCase() + str.slice(1);
}

const defaultSettings = {
    theme: 'dark',
    baseCurrency: 'usd',
    chartType: 'line'
};

function loadSettings() {
    const settings = JSON.parse(localStorage.getItem('userSettings')) || defaultSettings;
    document.getElementById('theme-select').value = settings.theme;
    document.getElementById('currency-select').value = settings.baseCurrency;
    document.getElementById('chart-style-select').value = settings.chartType;
    applyTheme(settings.theme);
}

function applyTheme(theme) {
    document.body.className = `theme-${theme}`;
}

function saveSettings() {
    const settings = {
        theme: document.getElementById('theme-select').value,
        baseCurrency: document.getElementById('currency-select').value,
        chartType: document.getElementById('chart-style-select').value
    };
    localStorage.setItem('userSettings', JSON.stringify(settings));
    applyTheme(settings.theme);
    document.getElementById('settings-message').textContent = 'Settings saved successfully!';
    setTimeout(() => {
        document.getElementById('settings-message').textContent = '';
    }, 3000);
}

function logout() {
    localStorage.removeItem('authToken');
    sessionStorage.clear();
    window.location.href = 'login.html';
}

document.addEventListener('DOMContentLoaded', () => {
    loadSettings();
    document.getElementById('save-settings-btn').addEventListener('click', saveSettings);
    document.getElementById('logout-btn').addEventListener('click', logout);
});
</script>

